<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <Nullable>enable</Nullable>
        <Platforms>AnyCPU</Platforms>
        <NoWarn>$(NoWarn);1591</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <Description>A data persistence abstraction layer for Cosmos DB</Description>
        <Version Condition="'$(BUILD_VERSION)' == ''">2.1.0</Version>
        <Version Condition="'$(BUILD_VERSION)' != ''">$(BUILD_VERSION)</Version>
        <AssemblyName>Soenneker.Cosmos.Repository</AssemblyName>
        <PackageId>Soenneker.Cosmos.Repository</PackageId>
        <PackageTags>cosmos db repository c# .net dotnet</PackageTags>
        <Copyright>Copyright Â© 2023-2024 Jake Soenneker</Copyright>
        <Authors>Jake Soenneker</Authors>
        <Company>https://soenneker.com</Company>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <IsPackable>true</IsPackable>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/soenneker/soenneker.cosmos.repository</PackageProjectUrl>
        <RepositoryUrl>https://github.com/soenneker/soenneker.cosmos.repository</RepositoryUrl>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <LangVersion>latest</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>icon.png</PackageIcon>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
        <None Include="..\LICENSE" Pack="true" PackagePath="\" />
        <None Include="..\icon.png" Pack="true" PackagePath="\" />
        <PackageReference Include="Microsoft.AspNetCore.OData" Version="9.0.0" />
        <PackageReference Include="Soenneker.Constants.Data" Version="2.1.319" />
        <PackageReference Include="Soenneker.Cosmos.Container" Version="2.1.1094" />
        <PackageReference Include="Soenneker.Documents.Audit" Version="2.1.1192" />
        <PackageReference Include="Soenneker.Dtos.IdPartitionPair" Version="2.1.314" />
        <PackageReference Include="Soenneker.Utils.BackgroundQueue" Version="2.1.1414" />
        <PackageReference Include="Soenneker.Utils.Json" Version="2.1.1243" />
        <PackageReference Include="Soenneker.Utils.Method" Version="2.1.316" />
        <PackageReference Include="Soenneker.Utils.UserContext" Version="2.1.832" />
    </ItemGroup>
</Project>
